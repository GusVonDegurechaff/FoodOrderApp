<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderApp.MainPage"
             BackgroundColor="#f5f5f5">

    <StackLayout Padding="20" Spacing="15">

        <Label Text="🍕 Главное меню" 
               FontSize="32" 
               FontAttributes="Bold"
               TextColor="#333"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="20">
            <StackLayout Spacing="15">
                <Button Text="Добавить Товар 1" Clicked="OnAddItemClicked" StyleClass="ProductButton" CommandParameter="Товар 1"/>
                <Button Text="Добавить Товар 2" Clicked="OnAddItemClicked" StyleClass="ProductButton" CommandParameter="Товар 2"/>
                <Button Text="Добавить Товар 3" Clicked="OnAddItemClicked" StyleClass="ProductButton" CommandParameter="Товар 3"/>
                <Button Text="Добавить Товар 4" Clicked="OnAddItemClicked" StyleClass="ProductButton" CommandParameter="Товар 4"/>
            </StackLayout>
        </Frame>

        <Button Text="🛒 Перейти в корзину" 
                Clicked="OnGoToCartClicked"
                FontAttributes="Bold"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
